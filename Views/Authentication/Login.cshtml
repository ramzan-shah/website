@model WebApplication2.Models.user
@{
    ViewBag.Title = "Login";
}

@Styles.Render("~/Content/styles.css")
@Styles.Render("~/Content/bootstrap.css")

@Styles.Render("~/Content/styles.css")
@Styles.Render("~/Content/bootstrap.css")
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jssor.js"></script>
<script src="~/Scripts/jssor.slider.js"></script>
<div>

    <div id="slider1_container" style="align-content:center;position: relative;bottom:100px; top: 50px; left: 20px; width: 1000px;
        height: 300px;">
        <!-- Slides Container -->
        <div class="jumbotron col-lg-10" u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 800px; height: 300px;
            overflow: hidden;">
            <div><img u="image" src="~/images/back4.jpg" /></div>
            <div><img u="image" src="~/images/1.jpg" /></div>
            <div><img u="image" src="~/images/aaa.png" /></div>
            <div><img u="image" src="~/images/help.png" /></div>
        </div>
    </div>
    <script>
    jQuery(document).ready(function ($) {
            var options = {
                $AutoPlay: true,
               $DragOrientation: 1
            };
            var jssor_slider1 = new $JssorSlider$("slider1_container", options);
    });
    </script>

</div>
<div style="margin-top:70px;">
    <div class="col-lg-8 page-header ">
        @using (Html.BeginForm("Login", "Authentication"))
        {
            <p style="font-size:25px" class="text-primary">
                Login
            </p>
            <p style="font-size:25px" class="text-primary">
                EXISTING MEMBERS
            </p>

            <p style="font-size:25px" class="text-primary">
                USERNAME @Html.TextBoxFor(m => m.name, new { id = "d3", @placeholder = "UserName" }) 
            </p>
            <p style="font-size:25px" class="text-primary">
                Password  @Html.TextBoxFor(m => m.pwd, new { id = "d3", @placeholder = "Password" })
            </p>
            <input type="submit" value="LOGIN"/>
        }
    </div>
    
    <div class="col-lg-4 page-header ">
        @Html.ActionLink("Join", "Register", "Authentication", new { area = "" }, new { @class = "pull right", @style = "padding-left:5em; color:blue;font-size:40px;margin-bottom:140px" })
        <h3 class="text-primary">   NOT A MEMBER?  <span style="padding-left:1em" class="glyphicon glyphicon-arrow-up"></span> </h3>

        <p>
            Find out about the benefits of joining Doctors.net.uk, which include free accredited online education, discussion forums, clinical resources, daily medical news and a professional email address.
        </p>
    </div>
</div>